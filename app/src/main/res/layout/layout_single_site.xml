<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7sp"
    android:background="@drawable/bg_rounded_faint"
    android:orientation="vertical"
    android:padding="7sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/la_singl_site_tv_sr"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/la_singl_site_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3sp"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/sitenm"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/la_singl_site_iv_xpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/showMore"
            android:padding="7sp"
            app:srcCompat="@drawable/ic_baseline_chevron_right_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/la_singl_site_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:progress="70" />

        <TextView
            android:id="@+id/la_singl_site_tv_perc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/la_singl_site_ll_dtls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/la_singl_site_tv_actual_start_dtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7sp"
            android:paddingTop="11sp"
            android:paddingBottom="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/la_singl_site_tv_start_dtt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="7sp"
                android:paddingTop="11sp"
                android:paddingBottom="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7sp"
                android:paddingTop="11sp"
                android:paddingBottom="11sp"
                android:text="to"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/la_singl_site_tv_end_dtt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="7sp"
                android:paddingTop="11sp"
                android:paddingBottom="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>