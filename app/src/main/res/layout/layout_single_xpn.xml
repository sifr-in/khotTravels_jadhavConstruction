<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9sp"
    android:background="@drawable/bg_rounded_faint"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/act_2qty_xp_ti_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#f9f9f9"
        android:padding="5sp"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/act_2qty_xp_ti_q"
        android:layout_width="66sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_faint"
        android:gravity="end"
        android:inputType="number"
        android:maxLength="3"
        android:paddingStart="7sp"
        android:paddingEnd="7sp"
        android:textSize="25sp" />
</LinearLayout>