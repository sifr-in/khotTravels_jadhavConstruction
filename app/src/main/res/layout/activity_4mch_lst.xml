<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5sp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/mchLst" />

        <TextView
            android:id="@+id/act_4mch_lst_tv_sitenm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="22sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/act_4mch_lst_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:entries="@array/arrBlank"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/act_4mch_lst_bt_adnw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11sp"
            android:layout_marginEnd="11sp"
            android:layout_weight="1"
            android:text="@string/addNw" />

        <Button
            android:id="@+id/act_4mch_lst_bt_trns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11sp"
            android:layout_marginEnd="11sp"
            android:layout_weight="1"
            android:text="@string/trans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_4mch_lst_ll_trns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/act_4mch_lst_trns_ti_qt"
            android:layout_width="55sp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:hint="qt"
            android:inputType="number"
            android:maxLength="3"
            android:padding="3sp" />

        <TextView
            android:id="@+id/act_4mch_lst_trns_2_site"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="transfer to"
            android:paddingTop="7sp"
            android:paddingBottom="7sp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/act_4mch_lst_trns_iv_mch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/showMore"
            android:padding="7sp"
            app:srcCompat="@drawable/ic_baseline_save_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_4mch_lst_ll_nw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/act_4mch_lst_iv_nwmch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/showMore"
            android:padding="7sp"
            app:srcCompat="@drawable/ic_baseline_save_24" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/act_4mch_lst_ti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fcf0f0"
            android:maxLength="32"
            android:padding="9sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/act_4mch_lst_ti_qt"
            android:layout_width="66sp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="qt"
            android:inputType="number"
            android:maxLength="3"
            android:padding="9sp"
            android:paddingStart="7sp"
            android:paddingEnd="7sp" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>