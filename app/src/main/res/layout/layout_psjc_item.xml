<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lay_menu_itm_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:scaleType="fitCenter" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lay_menu_itm_nm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="MRP:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lay_menu_itm_ta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="#008000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:id="@+id/lay_menu_itm_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="#ffcccb"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="@tools:sample/full_names" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/lay_menu_itm_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="5dp"
                android:text="item details."
                tools:text="@tools:sample/full_names" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3sp">

                <TextView
                    android:id="@+id/lay_menu_itm_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:id="@+id/lay_menu_itm_me"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    tools:text="@tools:sample/full_names" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lay_menu_tx_tot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="6sp"
                    android:paddingEnd="6sp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:lines="1" />

                <ImageView
                    android:id="@+id/lay_menu_btn_sub"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    cardView:srcCompat="@drawable/ic_baseline_remove_circle_outline_24" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lay_menu_tx_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLength="4"
                    android:text=" " />

                <ImageView
                    android:id="@+id/lay_menu_btn_add"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="TODO"
                    cardView:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>